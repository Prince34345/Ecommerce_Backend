generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  userId      String    @unique
  email       String    @unique
  username    String    @unique
  wishlist    Json[]    @unique
}

model Product {
  id           String   @id @default(uuid()) @map("_id") @db.ObjectId
  ProductId    Int
  Gender       String
  Category     String
  SubCategory  String
  ProductType  String
  Colour       String
  Usage        String
  ProductTitle String
  ImageURL     String
  UnitPrice    Float
}

model TrendingProducts {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  ProductId    Int
  Gender       String
  Category     String
  SubCategory  String
  ProductType  String
  Colour       String
  Usage        String
  ProductTitle String
  ImageURL     String
  UnitPrice    Float
}

model Category {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  Category String
}

model Filter {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  Title  String
  Values String
}
