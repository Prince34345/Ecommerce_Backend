generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  userId      String    @unique
  email       String    @unique
  username    String
  wishlist    Product[] @relation("wishlist")
}

model Product {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  ProductId    Int
  Gender       String
  Category     String
  SubCategory  String
  ProductType  String
  Colour       String
  Usage        String
  ProductTitle String
  ImageURL     String
  UnitPrice    Float
  wishlist     User @relation("wishlist", fields: [wishlistid], references: [id])
  wishlistid   String  @db.ObjectId
}

model TrendingProducts {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  ProductId    Int
  Gender       String
  Category     String
  SubCategory  String
  ProductType  String
  Colour       String
  Usage        String
  ProductTitle String
  ImageURL     String
  UnitPrice    Float
}

model Category {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  Category String
}

model Filter {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  Title  String
  Values String
}
